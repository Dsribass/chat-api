// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String         @id
  email         String         @unique
  name          String?
  password      String
  refresh_token RefreshToken[]
  channels      Channel[]

  @@map("users")
}

model RefreshToken {
  token  String @id
  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@map("refresh_token")
}

model Channel {
  type     ChannelType @default(DIRECT)
  id       String      @id
  name     String?
  members  User[]
  messages Message[]

  @@map("channels")
}

enum ChannelType {
  DIRECT
  GROUP
}

model Message {
  id        String   @id
  content   String
  createdAt DateTime @default(now())
  senderId  String
  channel   Channel  @relation(fields: [channelId], references: [id])
  channelId String
  readBy    String[]

  @@map("messages")
}
